<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,1,2,3"
    tools:context=".TableActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="0"
        android:textColor="#00ff00"
        android:textSize="50dp" />

    <TableRow>
    <Button
        android:id="@+id/btn_c"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="C"
        android:textColor="#ff0000" />

    <Button
        android:id="@+id/btn_b"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Back" />

    <Button
        android:id="@+id/btn_p"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="%" />

    <Button
        android:id="@+id/btn_m"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="*" />
    </TableRow>

    <TableRow>
    <Button
        android:id="@+id/btn_9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="9" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7" />

    <Button
        android:id="@+id/btn_ch"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="/" />
    </TableRow>

    <TableRow>
    <Button
        android:id="@+id/btn_6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4" />

    <Button
        android:id="@+id/btn_j"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="-" />
    </TableRow>

    <TableRow>
    <Button
        android:id="@+id/btn_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1" />

    <Button
        android:id="@+id/btn_a"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+" />
    </TableRow>

    <TableRow>
    <Button
        android:id="@+id/btn_or"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+/-" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="0" />

    <Button
        android:id="@+id/btn_dot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="." />

    <Button
        android:id="@+id/btn_e"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="=" />
    </TableRow>
</TableLayout>