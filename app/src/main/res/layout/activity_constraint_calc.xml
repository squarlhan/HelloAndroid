<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstraintCalcActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="0"
        android:textColor="#00ff00"
        android:textSize="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_c"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_b"
        android:text="C"
        android:textColor="#ff0000" />

    <Button
        android:id="@+id/btn_b"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintLeft_toRightOf="@id/btn_c"
        app:layout_constraintRight_toLeftOf="@id/btn_p"
        android:text="Back" />

    <Button
        android:id="@+id/btn_p"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintLeft_toRightOf="@id/btn_b"
        app:layout_constraintRight_toLeftOf="@id/btn_m"
        android:text="%" />

    <Button
        android:id="@+id/btn_m"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintLeft_toRightOf="@id/btn_p"
        app:layout_constraintRight_toRightOf="parent"
        android:text="*" />

    <Button
        android:id="@+id/btn_9"

        android:layout_width="0dp"
        android:layout_height="80dp"

        app:layout_constraintTop_toBottomOf="@id/btn_c"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintDimensionRatio="W,1:1"
        android:text="9" />

    <Button
        android:id="@+id/btn_8"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/btn_c"
        app:layout_constraintLeft_toRightOf="@id/btn_9"
        android:text="8" />

    <Button
        android:id="@+id/btn_7"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/btn_c"
        app:layout_constraintLeft_toRightOf="@id/btn_8"
        android:text="7" />

    <Button
        android:id="@+id/btn_ch"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/btn_c"
        app:layout_constraintLeft_toRightOf="@id/btn_7"
        android:text="/" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/btn_9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_5"
        android:text="6" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/btn_9"
        app:layout_constraintLeft_toRightOf="@id/btn_6"
        app:layout_constraintRight_toLeftOf="@id/btn_4"
        android:text="5" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/btn_9"
        app:layout_constraintLeft_toRightOf="@id/btn_5"
        app:layout_constraintRight_toLeftOf="@id/btn_j"
        android:text="4" />

    <Button
        android:id="@+id/btn_j"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/btn_9"
        app:layout_constraintLeft_toRightOf="@id/btn_4"
        app:layout_constraintRight_toRightOf="parent"
        android:text="-" />


    <Button
        android:id="@+id/btn_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/btn_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_2"
        android:text="3"
        app:layout_constraintHorizontal_chainStyle = "packed"/>

    <Button
        android:id="@+id/btn_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/btn_6"
        app:layout_constraintLeft_toRightOf="@id/btn_3"
        app:layout_constraintRight_toLeftOf="@id/btn_1"
        android:text="2" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/btn_6"
        app:layout_constraintLeft_toRightOf="@id/btn_2"
        app:layout_constraintRight_toLeftOf="@id/btn_a"
        android:text="1" />

    <Button
        android:id="@+id/btn_a"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/btn_6"
        app:layout_constraintLeft_toRightOf="@id/btn_1"
        app:layout_constraintRight_toRightOf="parent"
        android:text="+"
        />


    <Button
        android:id="@+id/btn_or"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/btn_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_0"
        android:text="+/-"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <Button
        android:id="@+id/btn_0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/btn_3"
        app:layout_constraintLeft_toRightOf="@id/btn_or"
        app:layout_constraintRight_toLeftOf="@id/btn_dot"
        android:text="0" />

    <Button
        android:id="@+id/btn_dot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/btn_3"
        app:layout_constraintLeft_toRightOf="@id/btn_0"
        app:layout_constraintRight_toLeftOf="@id/btn_e"
        android:text="." />

    <Button
        android:id="@+id/btn_e"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/btn_3"
        app:layout_constraintLeft_toRightOf="@id/btn_dot"
        app:layout_constraintRight_toRightOf="parent"
        android:text="=" />

</androidx.constraintlayout.widget.ConstraintLayout>